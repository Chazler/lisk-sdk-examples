extends index.pug

block content
    h2 Packet & Carrier Accounts

    h3 Packet Color Legend

    p(class='pending') grey = "pending"
    p(class='ongoing') yellow = "ongoing"
    p(class='alarm') purple = "alarm"
    p(class='success') green = "success"
    p(class='fail') red = "fail"

    table(border='1')
        tr
            th Address
            th Balance
            th Sender
            th Recipient
            th Asset

        each account in accounts

            tr(class=account.asset.status)
                td= account.address
                td= account.balance
                td= account.asset.sender
                td= account.asset.recipient
                td
                    pre= JSON.stringify(account.asset, null, 2)
